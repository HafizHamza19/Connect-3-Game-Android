<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.hafizhamza.connect3game.MainActivity"
    android:background="#7a0404">

    <GridLayout
        android:layout_width="368dp"
        android:layout_height="368dp"
        android:rowCount="3"
        android:columnCount="3"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:background="@drawable/board"
        android:focusable="false"
        android:id="@+id/gridLayout">

        <ImageView
            android:layout_width="95dp"
            android:layout_height="95dp"
            android:id="@+id/imageView"
            android:layout_row="0"
            android:layout_column="0"
            android:onClick="Dropin"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="0dp"
            android:tag="0"/>

        <ImageView
            android:layout_width="95dp"
            android:layout_height="95dp"
            android:id="@+id/imageView1"
            android:layout_row="0"
            android:layout_column="1"
            android:onClick="Dropin"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="18dp"
            android:tag="1"/>
        <ImageView
            android:layout_width="95dp"
            android:layout_height="95dp"
            android:id="@+id/imageView2"
            android:layout_row="0"
            android:layout_column="2"
            android:onClick="Dropin"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="20dp"
            android:tag="2"/>
        <ImageView
            android:layout_width="95dp"
            android:layout_height="95dp"
            android:id="@+id/imageView3"
            android:layout_row="1"
            android:layout_column="0"
            android:onClick="Dropin"
            android:layout_marginTop="25dp"
            android:layout_marginLeft="0dp"
            android:tag="3"/>
        <ImageView
            android:layout_width="95dp"
            android:layout_height="95dp"
            android:id="@+id/imageView4"
            android:layout_row="1"
            android:layout_column="1"
            android:onClick="Dropin"
            android:layout_marginTop="25dp"
            android:layout_marginLeft="18dp"
            android:tag="4"/>
        <ImageView
            android:layout_width="95dp"
            android:layout_height="95dp"
            android:id="@+id/imageView5"
            android:layout_row="1"
            android:layout_column="2"
            android:onClick="Dropin"
            android:layout_marginTop="25dp"
            android:layout_marginLeft="20dp"
            android:tag="5"/>
        <ImageView
            android:layout_width="95dp"
            android:layout_height="95dp"
            android:id="@+id/imageView6"
            android:layout_row="2"
            android:layout_column="0"
            android:onClick="Dropin"
            android:layout_marginTop="25dp"
            android:layout_marginLeft="0dp"
            android:tag="6"/>
        <ImageView
            android:layout_width="95dp"
            android:layout_height="95dp"
            android:id="@+id/imageView7"
            android:layout_row="2"
            android:layout_column="1"
            android:layout_marginTop="25dp"
            android:layout_marginLeft="18dp"
            android:onClick="Dropin"
            android:tag="7"/>
        <ImageView
            android:layout_width="95dp"
            android:layout_height="95dp"
            android:id="@+id/imageView8"
            android:layout_row="2"
            android:layout_column="2"
            android:onClick="Dropin"
            android:layout_marginTop="25dp"
            android:layout_marginLeft="20dp"
            android:tag="8"/>
    </GridLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="NewText"
        android:id="@+id/WiinertextView"
        android:visibility="invisible"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:textStyle="bold"
        android:textColor="#ffffff"
        android:layout_marginBottom="25dp"
        android:textSize="25dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Play Again"
        android:id="@+id/PlayAgainbutton"
        android:visibility="invisible"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textColor="#990606"
        android:layout_marginTop="10dp"
        android:onClick="PlayA" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="\@HafizHamza19"
        android:id="@+id/textView"
        android:textColor="#ffffff"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="#H&apos;s Group"
        android:id="@+id/textView2"
        android:textColor="#ffffff"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>
